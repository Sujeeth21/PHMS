<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:xlmns="http://schemas.android.com/tools"
    xlmns:app="https://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    android:layout_margin="13dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="24sp"
            android:textColor="#000"
            android:padding="8dp"
            android:id="@+id/Name_text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_margin="8dp"
            android:id="@+id/Gender_text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Age"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_margin="8dp"
            android:id="@+id/Age_text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Height"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_margin="8dp"
            android:id="@+id/Height_text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_margin="8dp"
            android:id="@+id/Weight_text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doctor's Name"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_margin="8dp"
            android:id="@+id/DocName_text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doctor's Visit Dates"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_margin="8dp"
            android:id="@+id/DocVisitDate_text"/>




    </LinearLayout>



</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    android:layout_margin="13dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:padding="8dp"
                android:text="DrName: "/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text ="Dr Name"
                android:textSize="24sp"
                android:padding="8dp"
                android:id="@+id/textDrsName"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:padding="8dp"
                android:text="Date: "/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text ="Date"
                android:textSize="24sp"
                android:padding="8dp"
                android:id="@+id/textsDdate"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:padding="8dp"
                android:text="Health Condtion: "/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text ="Condition"
                android:textSize="24sp"
                android:padding="8dp"
                android:id="@+id/textHcondition"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:padding="8dp"
                android:text="Mpres: "/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text ="Mpres"
                android:textSize="24sp"
                android:padding="8dp"
                android:id="@+id/textMpres"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:padding="8dp"
                android:text="Times: "/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text ="Time of Consumption"
                android:textSize="24sp"
                android:padding="8dp"
                android:id="@+id/texttime"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:padding="8dp"
                android:text="Medication notes: "/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text ="Notes"
                android:textSize="24sp"
                android:padding="8dp"
                android:id="@+id/textmnotes"/>
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>